a{
	-webkit-transition: color .2s ease;
	-moz-transition: color .2s ease;
	-o-transition: color .2s ease;
	-ms-transition: color .2s ease;
	transition: color .2s ease;
	color: {{ settings.link-colour }};
	outline: 0 !important;
}

a:hover,
a:focus{
	color: {{ settings.active-link-colour }};
}

strong, b{
	font-weight: bold;
}

em, i{
	font-style: italic;
}

