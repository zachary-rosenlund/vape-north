.page--banner .banner {
    padding: .5em 0;
    background: white;
    border-top: 2em solid #44813c;
    border-bottom: 2em solid #44813c;
}
.banner-announcement {
    text-transform: uppercase;
}
.banner-announcement h1 {
    font-weight: bold;
    text-align: center;
}
.banner-announcement a, .banner-announcement a:visited {
    color: #545454;
}
.banner-announcement a:hover, .banner-announcement a:active {
    color: #2e5728;
}
.banner-announcement__text-accent {
    color: #44813c;
}
.banner-icons {
    font-size: 40px;
    width: 170px;
}
.banner-icons__icon {
    text-align: center;
    max-width: 45px;
}
#interac img {
    width: 86%;
}
.logo {
    margin-right: auto;
}
.section-item{
    padding: 0 20px; 
}
@media (min-width: 1020px) {
    .page--banner .banner {
        padding: .5em 0;
    }
}
@media (max-width: 1150px) {
    .logo {
        margin: auto;
    }
    .section-item {
        padding-top: 1em;
        padding-left: 0;
        padding-right: 0;
    }
    .banner-announcement h1 {
        font-size: 1.1em;
    }
    .banner-icons__row {
        justify-content: center!important;
    }
    .banner-icons__icon {
        padding: 0 .2em;
    }
}

